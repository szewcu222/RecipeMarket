@model RecipeMarket.Models.Komentarz

@{
    ViewBag.Title = "CreateComment";
}

<h2>Dodaj Komentarz</h2>
<h3>@Model.PrzepisID</h3>

@using (Html.BeginForm("CreateComment", "Przepisy", FormMethod.Post, new { PrzepisID = Model.PrzepisID }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Komentarz</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TrescKomentarza, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TrescKomentarza, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TrescKomentarza, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CzasPrzygotowaniaOK, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.CzasPrzygotowaniaOK)
                    @Html.ValidationMessageFor(model => model.CzasPrzygotowaniaOK, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StopienTrudnosciOK, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.StopienTrudnosciOK)
                    @Html.ValidationMessageFor(model => model.StopienTrudnosciOK, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ocena, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ocena, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0", step = "1", max = "10" } })
                @Html.ValidationMessageFor(model => model.Ocena, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.Hidden("PrzepisID", Model.PrzepisID)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>
